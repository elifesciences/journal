{% set siteHeader = header %}
{% set header = false %}

{% extends '::page.html.twig' %}

{% block pre_body %}

    {% embed 'grid/content-simple.html.twig' %}

        {% block main %}

            {% if siteHeader %}

                {{ render_pattern(siteHeader) }}

            {% endif %}

            {{ render_pattern(contentHeader) }}

        {% endblock %}

    {% endembed %}

{% endblock %}

{% block body %}

    {% set isMainContent = true %}
    {% set lastBlock = true %}

    {% include 'calls-to-action.html.twig' %}

    {% embed 'grid/content-simple.html.twig' %}

        {% block main %}

            {% if formIntro|default(null) %}

                {{ render_pattern(formIntro) }}

            {% endif %}

            {% if form %}

                {% if form is iterable %}

                    {% for item in form %}

                        {{ render_pattern(item) }}

                    {% endfor %}

                {% else %}

                    {{ render_pattern(form) }}

                {% endif %}

            {% endif %}

        {% endblock %}

    {% endembed %}

{% endblock %}
