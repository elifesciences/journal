{% extends '::page.html.twig' %}

{% block body %}

    {{ render_pattern(contentHeader) }}

    {% include 'calls-to-action.html.twig' %}

    {% embed 'grid/content-simple.html.twig' %}

        {% block main %}

            {% if formIntro|default(null) %}

                {{ render_pattern(formIntro) }}

            {% endif %}

            {% if form %}

                {% if form is iterable %}

                    {% for item in form %}

                        {{ render_pattern(item) }}

                    {% endfor %}

                {% else %}

                    {{ render_pattern(form) }}

                {% endif %}

            {% endif %}

        {% endblock %}

    {% endembed %}

{% endblock %}
