{% extends '::page.html.twig' %}

{% block title %}{{ article.title|striptags }} | {% endblock %}

{% block info_bar %}

    {{ info_bar('This page is incomplete.') }}

    {% for infoBar in infoBars %}
        {{ render_pattern(infoBar) }}
    {% endfor %}

{% endblock %}

{% block body %}

    {{ render_pattern(contentHeader) }}

    <div class="wrapper">

        {{ render_pattern(contextualData) }}

    </div>

    <div class="wrapper">

        <div class="grid">

            {% if viewSelector %}

                <div class="grid__item large--two-twelfths u-pad-top-lg">

                    {{ render_pattern(viewSelector) }}

                </div>

            {% endif %}

            <div class="grid__item large--six-twelfths {% if not viewSelector %}push--large--two-twelfths{% endif %} u-pad-top-lg">

                {% if body %}

                    {% for part in body %}

                        {{ render_pattern(part) }}

                    {% endfor %}

                {% endif %}

            </div>
        </div>

    </div>

{% endblock %}
