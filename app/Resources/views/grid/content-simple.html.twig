<div class="wrapper"{% if isMainContent ?? false %} id="content"{% endif %}>

    <div class="grid">

        {% set main = block('main') %}

        <div class="content-container grid__item content_alerts-container">

            {% for infoBar in infoBars %}
                {% if infoBar.type == 'announcement' %}
                    {{ render_pattern(infoBar) }}
                {% endif %}
            {% endfor %}

            {{ main|raw }}

        </div>

    </div>

</div>
