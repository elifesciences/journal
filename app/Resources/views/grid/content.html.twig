{# Only the first content wrapper should use css .wrapper--content. #}
<div class="wrapper{% if not isSubsequent ?? false %} wrapper--content{% endif %}">

    <div class="grid">

        {% set navigation = (block('navigation') ?? '')|trim %}
        {% set main = block('main') %}
        {% set secondary = (block('secondary') ?? '')|trim %}

        {% if navigation|length %}

            <div class="grid__item one-whole x-large--two-twelfths
                        {# Needed to prevent collapse when contents are out of document flow #}
                        blg-pad-bottom-smallish">

                {{ navigation|raw }}

            </div>

        {% endif %}

        <div class="grid__item one-whole

            {% if secondary|length %}
                large--eight-twelfths x-large--seven-twelfths
                {% if not navigation|length %}push--x-large--two-twelfths{% endif %}
            {% else %}
                large--ten-twelfths push--large--one-twelfth x-large--eight-twelfths
                {% if navigation|length %}push--x-large--zero{% else %}push--x-large--two-twelfths{% endif %}
            {% endif %}
            grid-column">

            {{ main|raw }}

        </div>

        {% if secondary|length %}

            <div class="grid__item one-whole

                large--four-twelfths x-large--three-twelfths
                {% if not navigation|length %}push--x-large--two-twelfths{% endif %}
                grid-secondary-column
                {# article-secondary-column used in teaser pattern to apply one-off styles. This coupling is
                   uncomfortable. May be possible to replace it by having the view model tell the teaser pattern it's in
                   an article secondary column, and apply a corresponding css variant class directly to .teaser #}
                article-secondary-column">

                {{ secondary|raw }}

            </div>

        {% endif %}

    </div>

</div>
