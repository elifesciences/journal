{% extends '::page.html.twig' %}

{% block title %}{{ title|striptags }} | Inside eLife{% endblock %}

{% block body %}

    {{ render_pattern(contentHeader) }}

    {% if leadParas %}

        <div class="wrapper">
            {{ render_pattern(leadParas) }}
        </div>

    {% endif %}

    <div class="wrapper u-pad-top-lg">

        <div class="grid">

            <div class="grid__item medium--six-twelfths push--large--three-twelfths u-pad-top">

                {% for block in blocks %}
                    {{ render_pattern(block) }}
                {% endfor %}

            </div>

        </div>

    </div>

{% endblock %}
