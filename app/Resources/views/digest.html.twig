{% set criticalCss = 'post' %}

{% set hypothesis = true %}
{% set customWrapperClass = 'content--narrow-column' %}

{% extends '::page.html.twig' %}

{% block title %}{{ title|striptags }} | eLife Science Digests{% endblock %}

{% block body %}

    {{ render_pattern(contentHeader) }}

    {% include 'calls-to-action.html.twig' %}

    {% embed 'grid/content-new.html.twig' %}

        {% block social %}

            {% if socialMediaSharersLinks %}

                {% if socialImage %}

                    <div class="captioned-asset--wrapper">
                        {{ render_pattern(socialImage) }}
                    </div>
                    
                {% endif %}

                {{ render_pattern(socialMediaSharersLinks) }}

            {% endif %}

        {% endblock %}

        {% block main %}

            {% for block in blocks %}
                {{ render_pattern(block) }}
            {% endfor %}

        {% endblock %}

        {% block secondary %}

            {% if relatedContent %}

                <div class="grid-secondary-column__item">

                    {{ render_pattern(relatedContent) }}

                </div>

            {% endif %}

        {% endblock %}

    {% endembed %}

    {{ schema_org_metadata(item) }}

{% endblock %}
