{% extends '::page.html.twig' %}

{% block title %}{{ title|striptags }} | For the press{% endblock %}

{% block body %}

    {{ render_pattern(contentHeader) }}

    <div class="wrapper u-pad-top-lg">

        <div class="grid">

            <div class="{% include 'grid-item-classes.html.twig' with {'column': 'content-main'} %}">

                {% for block in blocks %}
                    {{ render_pattern(block) }}
                {% endfor %}

            </div>

            <div class="{% include 'grid-item-classes.html.twig' with {'column': 'content-secondary'} %}">

                {{ render_pattern(relatedContent) }}

            </div>

        </div>

    </div>

{% endblock %}
