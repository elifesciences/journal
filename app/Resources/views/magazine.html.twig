{% extends '::page.html.twig' %}

{% block body %}

    {{ render_pattern(contentHeader) }}

    {% if audio_player %}
        {{ render_pattern(audio_player) }}
    {% endif %}

    <div class="wrapper u-pad-top">

        {{ render_pattern(menuLink) }}

    </div>

    {% if highlights %}

        <div class="wrapper u-pad-top">

            {{ render_pattern(highlights) }}

        </div>

    {% endif %}

    <div class="wrapper u-pad-top-lg">

        <div class="grid">

            <div class="listing-column-container">

                <div class="grid__item large--eight-twelfths listing-column-main {% if not events and not elifeDigests %}push--large--two-twelfths{% endif %}">

                    {{ render_pattern(listing) }}

                </div>

                {% if events or elifeDigests %}

                    <div class="grid__item large--four-twelfths listing-column-secondary">

                        {% if events %}
                            {{ render_pattern(events) }}
                        {% endif %}

                        {% if elifeDigests %}
                            {{ render_pattern(elifeDigests) }}
                        {% endif %}

                    </div>

                {% endif %}

            </div>

        </div>

    </div>

    <div class="wrapper">

        {{ render_pattern(menu) }}

    </div>

{% endblock %}
