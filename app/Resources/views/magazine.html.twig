{% set criticalCss = 'magazine' %}

{% extends '::page.html.twig' %}

{% block body %}

    {{ render_pattern(contentHeader) }}

    {% if audio_player %}
        {{ render_pattern(audio_player) }}
    {% endif %}

    <div class="wrapper">

        {{ render_pattern(menuLink) }}

    </div>

    {% if highlights %}

        <div class="wrapper">

            {{ render_pattern(highlights) }}

        </div>

    {% endif %}

    {% embed 'grid/listing-two-column.html.twig' %}

        {% block main %}

            {{ render_pattern(listing) }}

        {% endblock %}


        {% block secondary %}

            {% if events %}

                <div class="grid-secondary-column__item">

                    {{ render_pattern(events) }}

                </div>

            {% endif %}

            {% if elifeDigests %}

                <div class="grid-secondary-column__item">

                    {{ render_pattern(elifeDigests) }}

                </div>

            {% endif %}

        {% endblock %}

    {% endembed %}

    <div class="wrapper">

        {{ render_pattern(menu) }}

    </div>

{% endblock %}
