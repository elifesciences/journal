{% extends '::page.html.twig' %}

{% block title %}{{ title|striptags }} | Events{% endblock %}

{% block meta %}

    {{ parent() }}

    {% if date(event.ends) < date() %}
        <meta name="robots" content="noindex">
    {% endif %}

{% endblock %}

{% block info_bar %}

    {{ info_bar('This page is incomplete.') }}

{% endblock %}

{% block body %}

    {% if date(event.ends) < date() %}
        {{ info_bar('This event has finished.', constant('eLife\\Patterns\\ViewModel\\InfoBar::TYPE_ATTENTION')) }}
    {% endif %}

    {{ render_pattern(contentHeader) }}

    <div class="wrapper">

        {% if leadParas %}
            {{ render_pattern(leadParas) }}
        {% endif %}

        <div class="grid">

            <div class="grid__item medium--six-twelfths push--large--three-twelfths u-pad-top">

                {% for block in blocks %}
                    {{ render_pattern(block) }}
                {% endfor %}

            </div>

        </div>

    </div>

{% endblock %}
