{% extends '::page.html.twig' %}

{% block title %}{{ title|striptags }} | Collections{% endblock %}

{% block description %}
    {{ collection.impactStatement|raw }}
{% endblock %}

{% block body %}

    {{ render_pattern(contentHeader) }}

    <div class="wrapper">

        {% if leadParas %}
            {{ render_pattern(leadParas) }}
        {% endif %}

        <div class="grid">

            <div class="grid__item medium--eight-twelfths">

                {{ render_pattern(collectionList) }}

            </div>

            <div class="grid__item medium--four-twelfths">

                {% if multimedia %}
                    {{ render_pattern(multimedia) }}
                {% endif %}

                {% if related %}
                    {{ render_pattern(related) }}
                {% endif %}

                <div class="u-pad-top">
                    {{ render_pattern(contributors) }}
                </div>

            </div>

        </div>

    </div>

{% endblock %}
