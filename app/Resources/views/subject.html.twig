{% set criticalCss = 'landing' %}

{% extends '::page.html.twig' %}

{% block meta %}

    {{ parent() }}

    <link rel="alternate" type="application/rss+xml" title="eLife Sciences {{ title|striptags }} RSS feed" href="{{ path('rss-recent-by-subject') }}?subject={{ id }}" />

{% endblock %}

{% block body %}

    {{ render_pattern(contentHeader) }}

    {% include 'calls-to-action.html.twig' %}

    {% embed 'grid/listing-two-column.html.twig' %}

        {% block main %}

            {{ render_pattern(listing) }}

        {% endblock %}

        {% block secondary %}

            {% if highlights %}

                <div class="grid-secondary-column__item">

                    {{ render_pattern(highlights) }}

                </div>

            {% endif %}

            {% if seniorEditors %}

                <div class="grid-secondary-column__item">

                    {{ render_pattern(seniorEditors) }}

                </div>

            {% endif %}

        {% endblock %}

    {% endembed %}

{% endblock %}
