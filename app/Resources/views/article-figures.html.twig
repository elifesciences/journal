{% extends '::article.html.twig' %}

{% block canonical %}
    {{ path('article-figures', {id: article.id}) }}
{% endblock %}

{% block article_body %}

    {% embed 'grid/content.html.twig' %}

        {% block navigation %}

            {% if viewSelector %}

                {{ render_pattern(viewSelector) }}

            {% endif %}

        {% endblock %}

        {% block main %}

            <div data-behaviour="DelegateBehaviour" data-delegate-behaviour="Popup" data-selector="a">

                {% fragment_link_rewrite textPath %}

                {% for part in body %}

                    {{ render_pattern(part) }}

                {% endfor %}

                {% end_fragment_link_rewrite %}

            </div>

        {% endblock %}

    {% endembed %}

{% endblock %}
