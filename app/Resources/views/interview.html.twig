{% extends '::page.html.twig' %}

{% block title %}{{ title|striptags }} | Interviews{% endblock %}

{% block description %}
    {{ interview.impactStatement|raw }}
{% endblock %}

{% block body %}

    {{ render_pattern(contentHeader) }}

    <div class="wrapper u-pad-top-lg">

        <div class="grid">

            <div class="{% include 'grid-item-classes.html.twig' with {'column': 'content-main'} %}  u-pad-top">

                {% for block in blocks %}
                    {{ render_pattern(block) }}
                {% endfor %}

                {% if cv %}
                    {{ render_pattern(cv) }}
                {% endif %}

            </div>

        </div>

    </div>

{% endblock %}
