{% extends '::page.html.twig' %}

{% block title %}{{ title|striptags }} | Jobs{% endblock %}

{% block meta %}

    {{ parent() }}

    {% if date(item.closingDate) < date() %}
        <meta name="robots" content="noindex">
    {% endif %}

{% endblock %}

{% block body %}

    {{ render_pattern(contentHeader) }}

    {% embed 'grid/content.html.twig' %}

        {% block main %}

            {% for block in blocks %}
                {{ render_pattern(block) }}
            {% endfor %}

        {% endblock %}

    {% endembed %}

{% endblock %}
