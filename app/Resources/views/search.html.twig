{% extends '::page.html.twig' %}

{% block title %}{{ title }}{% endblock %}

{% block meta %}

    <meta name="robots" content="noindex">

{% endblock %}

{% block info_bar %}

    {{ info_bar('This page is incomplete.') }}

{% endblock %}

{% block body %}

    <div class="wrapper u-pad-top-lg">

        {% if filterPanel %}

        <div class="grid">

            <div class="grid__item large--eight-twelfths">

                {% endif %}

                {{ render_pattern(sortControl) }}

                {{ render_pattern(messageBar) }}

                {% if listing %}
                    {{ render_pattern(listing) }}
                {% endif %}

                {% if filterPanel %}

            </div>

            <div class="grid__item large--four-twelfths">

                <form method="get" action="{{ path('search') }}">

                    <input type="hidden" name="for" value="{{ query.for }}">
                    <input type="hidden" name="sort" value="{{ query.sort }}">
                    <input type="hidden" name="order" value="{{ query.order }}">

                    {{ render_pattern(filterPanel) }}

                </form>

            </div>

        </div>

        {% endif %}

    </div>

{% endblock %}
