def wrapper = { body ->
    node('containers-jenkins-plugin') {
        body()
    }
}

elifeUpdatePipeline(
    {
        def pullRequestReference = ~/ \(#\d+\)/
        return "Updated elife/patterns to ${params.revision.substring(0, 7)}: ${params.message - pullRequestReference}"
    },
    'update_patterns_php_',
    wrapper
)
