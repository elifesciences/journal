ARG image_tag=latest
FROM elifesciences/journal_assets:${image_tag} AS assets
FROM nginx:1.13.7

COPY .docker/nginx-default.conf /etc/nginx/conf.d/default.conf

RUN mkdir -p /srv/journal/web && \
    touch /srv/journal/web/app.php
COPY --from=assets --chown=www-data:www-data /web/favicon.ico web/
COPY --from=assets --chown=www-data:www-data /web/assets/ /srv/journal/web/assets/
