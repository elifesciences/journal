<li class="highlight-item">
   {{#image}}
   <a href="{{link.url}}" class="highlight-item__picture-wrapper">
     <picture class='highlight-item__picture'>
         {{#sources}}
         <source srcset='{{srcset}}'
                 {{#type}} type='{{type}}' {{/type}}
                 {{#media}} media='{{media}}' {{/media}}>
         {{/sources}}
         {{#fallback}}
         <img src='{{defaultPath}}'
              {{#srcset}} srcset='{{srcset}}' {{/srcset}}
              alt='{{altText}}'
              class='highlight-item__image' />
         {{/fallback}}
     </picture>
   </a>
   {{/image}}

<div class="highlight-item__body">
    <h2 class="highlight-item__title">
        <a href="{{link.url}}" class="highlight-item__title_link">{{{link.name}}}</a>
    </h2>

    {{#summary}}
    <p class="paragraph">{{{summary}}}</p>
    {{/summary}}

    {{#authors}}
    <div class="author-line">{{{authors}}}</div>
    {{/authors}}

    {{#meta}}
    <div class="highlight-item__meta">
        {{> resources/templates/meta}}
    </div>
    {{/meta}}
</div>
  
</li>
