default:
    extensions:
        Behat\MinkExtension:
            sessions:
                default:
                    symfony2: ~
        Behat\Symfony2Extension:
            kernel:
                class: eLife\Journal\AppKernel
        jarnaiz\JUnitFormatter\JUnitFormatterExtension:
            filename: behat.xml
            outputDir: %paths.base%/build
    suites:
        collection:
            filters:
                tags: '@collection'
            contexts:
              - CollectionContext
        labs:
            filters:
                tags: '@labs'
            contexts:
              - LabsContext
        magazine:
            filters:
                tags: '@magazine'
            contexts:
              - MagazineContext
        podcast:
            filters:
                tags: '@podcast'
            contexts:
              - PodcastContext
        subject:
            filters:
                tags: '@subject'
            contexts:
              - SubjectContext
